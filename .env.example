# Base URL for NextAuth and success/cancel redirects
NEXTAUTH_URL=http://localhost:3000

# Database (Postgres) connection string
DATABASE_URL=postgresql://user:password@host:5432/dbname?schema=public

# 32-character key used for AES-256-CBC encryption of Razorpay secrets in DB
ENCRYPTION_KEY=change-this-to-32-characters-123456

# Razorpay (Test Mode)
RAZORPAY_KEY_ID=rzp_test_xxx
RAZORPAY_KEY_SECRET=your_test_secret
RAZORPAY_WEBHOOK_SECRET=whsec_xxx

# Monitoring: not configured by default; add your own provider if needed
